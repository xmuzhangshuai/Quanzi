<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/system_main_bg"
    android:paddingLeft="@dimen/share_space"
    android:paddingRight="@dimen/share_space"
    android:paddingTop="@dimen/share_space" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_top_radius"
        android:orientation="vertical"
        android:paddingTop="@dimen/margin_chat_activity" >

        <TextView
            android:id="@+id/act_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/share_space"
            android:layout_marginLeft="@dimen/personal_timecapsule_padding"
            android:layout_marginRight="@dimen/personal_timecapsule_padding"
            android:layout_marginTop="@dimen/margin_chat_activity"
            android:textSize="@dimen/day_recommend_font_info"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f8f8f8"
            android:paddingBottom="@dimen/margin_chat_activity"
            android:paddingLeft="@dimen/personal_timecapsule_padding"
            android:paddingRight="@dimen/personal_timecapsule_padding"
            android:paddingTop="@dimen/margin_chat_activity" >

            <ImageView
                android:id="@+id/head_image"
                android:layout_width="@dimen/day_recommend_help_padding"
                android:layout_height="@dimen/day_recommend_help_padding"
                android:src="@drawable/photoconor" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/day_recommend_help_padding"
                android:layout_toRightOf="@+id/head_image"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/day_recommend_dot_space"
                    android:ellipsize="end"
                    android:maxLength="4"
                    android:textColor="@color/black"
                    android:textSize="@dimen/day_recommend_user_font" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/unenable"
                    android:textSize="@dimen/register_font_size" />
            </RelativeLayout>
        </RelativeLayout>

      <ImageView
            android:id="@+id/item_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/personal_timecapsule_padding"
            android:layout_marginRight="@dimen/personal_timecapsule_padding"
            android:layout_marginTop="@dimen/setting_list_margin"
            android:gravity="center"
            android:maxHeight="@dimen/tape_margin_top"
            android:maxWidth="@dimen/tape_margin"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/item_image_group1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/setting_list_margin"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/personal_timecapsule_padding"
            android:paddingRight="@dimen/personal_timecapsule_padding"
            android:paddingTop="2dp"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/item_image1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/personal_photo_size"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/item_image2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/personal_photo_size"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/item_image3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/personal_photo_size"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_image_group2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/personal_timecapsule_padding"
            android:paddingRight="@dimen/personal_timecapsule_padding"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/item_image4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/personal_photo_size"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/item_image5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/personal_photo_size"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/item_image6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/personal_photo_size"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:visibility="gone" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/share_space"
            android:paddingLeft="@dimen/personal_timecapsule_padding"
            android:paddingRight="@dimen/personal_timecapsule_padding"
            android:paddingTop="@dimen/share_space" >

            <LinearLayout
                android:id="@+id/act_time_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/margin_chat_activity" >

                <ImageView
                    android:layout_width="@dimen/time_capsule20"
                    android:layout_height="@dimen/time_capsule20"
                    android:src="@drawable/calender" />

                <TextView
                    android:id="@+id/act_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/personal_timecapsule_padding"
                    android:singleLine="true"
                    android:textSize="@dimen/register_font_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/act_location_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/act_time_container"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/margin_chat_activity" >

                <ImageView
                    android:layout_width="@dimen/time_capsule20"
                    android:layout_height="@dimen/time_capsule20"
                    android:src="@drawable/location" />

                <TextView
                    android:id="@+id/act_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/personal_timecapsule_padding"
                    android:singleLine="true"
                    android:textSize="@dimen/register_font_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/act_gender_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/act_location_container"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/margin_chat_activity" >

                <ImageView
                    android:layout_width="@dimen/time_capsule20"
                    android:layout_height="@dimen/time_capsule20"
                    android:src="@drawable/follower" />

                <TextView
                    android:id="@+id/act_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/personal_timecapsule_padding"
                    android:singleLine="true"
                    android:textSize="@dimen/register_font_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/act_content_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/act_gender_container"
                android:orientation="horizontal"
                android:padding="@dimen/margin_chat_activity" >

                <ImageView
                    android:layout_width="@dimen/time_capsule20"
                    android:layout_height="@dimen/time_capsule20"
                    android:src="@drawable/detail_content" />

                <TextView
                    android:id="@+id/act_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/personal_timecapsule_padding"
                    android:textSize="@dimen/register_font_size" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/share_space"
            android:paddingLeft="@dimen/personal_timecapsule_padding"
            android:paddingRight="@dimen/personal_timecapsule_padding"
            android:paddingTop="@dimen/share_space" >

            <ImageView
                android:id="@+id/participant_image"
                android:layout_width="@dimen/day_recommend_help_padding"
                android:layout_height="@dimen/day_recommend_help_padding"
                android:layout_centerVertical="true"
                android:src="@drawable/participants" />

            <TextView
                android:id="@+id/participants_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/personal_timecapsule_padding"
                android:layout_toRightOf="@+id/participant_image"
                android:singleLine="true"
                android:text="19人参加"
                android:textColor="@color/unenable"
                android:textSize="@dimen/register_font_size" />

            <TextView
                android:id="@+id/apply_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/sel_radius_green_btn_bg"
                android:gravity="center"
                android:paddingBottom="@dimen/setting_list_margin"
                android:paddingLeft="@dimen/motify_data_space"
                android:paddingRight="@dimen/motify_data_space"
                android:paddingTop="@dimen/setting_list_margin"
                android:text="我要报名"
                android:textColor="@color/white"
                android:textSize="@dimen/day_recommend_font_info" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/day_recommend_dot_space"
            android:background="@color/unenable_font" />
    </LinearLayout>

</LinearLayout>