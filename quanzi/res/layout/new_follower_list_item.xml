<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/setting_list_margin"
    android:paddingLeft="@dimen/day_recommend_help_padding"
    android:paddingRight="@dimen/share_space"
    android:paddingTop="@dimen/setting_list_margin" >

    <ImageView
        android:id="@+id/head_image"
        android:layout_width="@dimen/register_height"
        android:layout_height="@dimen/register_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/photoconor" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/head_image"
        android:layout_marginLeft="@dimen/day_recommend_help_padding"
        android:layout_marginTop="@dimen/margin_chat_activity"
        android:layout_toRightOf="@+id/head_image"
        android:ellipsize="end"
        android:text="张帅"
        android:textSize="@dimen/day_recommend_user_font" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/head_image"
        android:layout_marginBottom="@dimen/margin_chat_activity"
        android:layout_marginLeft="@dimen/day_recommend_help_padding"
        android:layout_toRightOf="@+id/head_image"
        android:ellipsize="end"
        android:text="4.10 12:60"
        android:textColor="@color/unenable"
        android:textSize="@dimen/day_recommend_font_info" />

    <CheckBox
        android:id="@+id/concern_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/day_recommend_help_padding"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/share_space"
        android:background="@drawable/sel_concern_gray_green"
        android:button="@null"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/register_font_size" />

</RelativeLayout>