<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/system_main_bg"
    android:paddingBottom="@dimen/setting_list_margin"
    android:paddingLeft="@dimen/share_space"
    android:paddingRight="@dimen/share_space"
    android:paddingTop="@dimen/setting_list_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_radius_with_stroke"
        android:orientation="vertical"
        android:paddingTop="@dimen/margin_chat_activity" >

        <RelativeLayout
            android:id="@+id/head_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/setting_list_margin"
            android:layout_marginLeft="@dimen/personal_timecapsule_padding"
            android:layout_marginRight="@dimen/personal_timecapsule_padding"
            android:layout_marginTop="@dimen/new_msg" >

            <ImageView
                android:id="@+id/head_image"
                android:layout_width="@dimen/headimage_size"
                android:layout_height="@dimen/headimage_size"
                android:src="@drawable/photoconor" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/headimage_size"
                android:layout_toRightOf="@+id/head_image"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/day_recommend_dot_space"
                    android:ellipsize="end"
                    android:maxLength="4"
                    android:textColor="@color/black"
                    android:textSize="@dimen/day_recommend_user_font" />

                <ImageView
                    android:id="@+id/gender"
                    android:layout_width="@dimen/activity_horizontal_margin"
                    android:layout_height="@dimen/activity_horizontal_margin"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/day_recommend_dot_space"
                    android:layout_toRightOf="@+id/name"
                    android:src="@drawable/male" />

                <CheckBox
                    android:id="@+id/concern_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/day_recommend_help_padding"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/day_recommend_help_padding"
                    android:layout_toLeftOf="@+id/time"
                    android:background="@drawable/sel_concern_gray_green"
                    android:button="@null"
                    android:textColor="@color/white"
                    android:textSize="@dimen/register_font_size"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/unenable"
                    android:textSize="@dimen/register_font_size" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/personal_timecapsule_padding"
            android:layout_marginRight="@dimen/personal_timecapsule_padding"
            android:layout_marginTop="@dimen/margin_chat_activity"
            android:textSize="@dimen/day_recommend_user_font" />

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/personal_timecapsule_padding"
            android:layout_marginRight="@dimen/personal_timecapsule_padding"
            android:layout_marginTop="@dimen/setting_list_margin"
            android:gravity="center"
            android:maxHeight="@dimen/tape_margin_top"
            android:maxWidth="@dimen/tape_margin"
            android:scaleType="centerCrop"
            android:src="@drawable/content" />

        <LinearLayout
            android:id="@+id/item_image_group1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/setting_list_margin"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/personal_timecapsule_padding"
            android:paddingRight="@dimen/personal_timecapsule_padding"
            android:paddingTop="2dp"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/item_image1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/personal_photo_size"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/content"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/item_image2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/personal_photo_size"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/content"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/item_image3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/personal_photo_size"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/content"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_image_group2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/personal_timecapsule_padding"
            android:paddingRight="@dimen/personal_timecapsule_padding"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/item_image4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/personal_photo_size"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/content"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/item_image5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/personal_photo_size"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/content"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/item_image6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/personal_photo_size"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/content"
                android:visibility="gone" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/comment1_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/comment_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/personal_timecapsule_padding"
                android:layout_marginTop="@dimen/margin_chat_activity"
                android:text="小明："
                android:textColor="@color/comment_name"
                android:textSize="@dimen/comment_font_size" />

            <TextView
                android:id="@+id/comment_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="@dimen/personal_timecapsule_padding"
                android:layout_marginTop="@dimen/margin_chat_activity"
                android:layout_toLeftOf="@+id/time1"
                android:layout_toRightOf="@+id/comment_user_name"
                android:singleLine="true"
                android:text="简约但不适华丽"
                android:textColor="@color/unenable"
                android:textSize="@dimen/comment_font_size" />

            <TextView
                android:id="@+id/time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="@dimen/personal_timecapsule_padding"
                android:layout_marginTop="@dimen/margin_chat_activity"
                android:text="12:02"
                android:textColor="@color/unenable"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/comment2_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/comment_user_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/personal_timecapsule_padding"
                android:layout_marginTop="@dimen/margin_chat_activity"
                android:text="小王："
                android:textColor="@color/comment_name"
                android:textSize="@dimen/comment_font_size" />

            <TextView
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="@dimen/margin_chat_activity"
                android:layout_toRightOf="@+id/comment_user_name1"
                android:text="回复"
                android:textColor="@color/unenable"
                android:textSize="@dimen/comment_font_size" />

            <TextView
                android:id="@+id/comment_user_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="@dimen/margin_chat_activity"
                android:layout_toRightOf="@+id/label"
                android:text="小明："
                android:textColor="@color/comment_name"
                android:textSize="@dimen/comment_font_size" />

            <TextView
                android:id="@+id/comment_content2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="@dimen/personal_timecapsule_padding"
                android:layout_marginTop="@dimen/margin_chat_activity"
                android:layout_toLeftOf="@+id/time2"
                android:layout_toRightOf="@+id/comment_user_name2"
                android:singleLine="true"
                android:text="谢谢哈~！！有你真好"
                android:textColor="@color/unenable"
                android:textSize="@dimen/comment_font_size" />

            <TextView
                android:id="@+id/time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="@dimen/personal_timecapsule_padding"
                android:layout_marginTop="@dimen/margin_chat_activity"
                android:text="14:22"
                android:textColor="@color/unenable"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/personal_timecapsule_padding"
            android:layout_marginRight="@dimen/personal_timecapsule_padding"
            android:layout_marginTop="@dimen/setting_list_margin"
            android:text="查看全部215条评论"
            android:textColor="@color/unenable"
            android:textSize="@dimen/register_font_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/setting_list_margin"
            android:background="@color/unenable_font" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/personal_timecapsule_padding"
            android:layout_marginRight="@dimen/personal_timecapsule_padding"
            android:paddingBottom="@dimen/new_msg"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/new_msg" >

            <TextView
                android:id="@+id/favor_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/sel_color_gray_green"
                android:textSize="@dimen/register_font_size" />

            <ImageView
                android:id="@+id/more"
                android:layout_width="@dimen/time_capsule20"
                android:layout_height="@dimen/time_capsule20"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/login_register"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/comment_btn"
                android:clickable="true"
                android:focusable="false"
                android:src="@drawable/sel_more_btn" />

            <ImageView
                android:id="@+id/comment_btn"
                android:layout_width="@dimen/motify_data_space"
                android:layout_height="@dimen/motify_data_space"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/login_register"
                android:layout_toLeftOf="@+id/favor_btn"
                android:src="@drawable/sel_comment_btn" />

            <CheckBox
                android:id="@+id/favor_btn"
                android:layout_width="@dimen/motify_data_space"
                android:layout_height="@dimen/motify_data_space"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/sel_flipper_checkbox"
                android:button="@null" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>