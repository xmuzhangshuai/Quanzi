<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="52dp"
    android:gravity="center_vertical"
    android:padding="0.0px" >

    <ImageView
        android:id="@+id/rlCommenTitleBG"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/navigation_bg" />

    <TextView
        android:id="@+id/left_text"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@+id/left_btn_bg"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/day_recommend_user_font" />

    <TextView
        android:id="@+id/nav_text"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingLeft="9.0dip"
        android:paddingRight="9.0dip"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/day_recommend_user_font" />

    <LinearLayout
        android:id="@+id/left_btn_bg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="@drawable/sel_nav_leftbtn_bg"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/left_text1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav_right_btn3"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/nav_right_btn2"
        android:background="@drawable/sel_nav_leftbtn_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/day_recommend_dot_space"
        android:visibility="gone" >

        <TextView
            android:id="@+id/right_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:singleLine="true"
            android:text="筛选"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav_right_btn2"
        android:layout_width="@dimen/login_register"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/nav_right_btn1"
        android:background="@drawable/sel_nav_leftbtn_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/personal_timecapsule_padding" >

        <ImageView
            android:id="@+id/nav_right_btn2_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:includeFontPadding="false"
            android:src="@drawable/search_white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav_right_btn1"
        android:layout_width="@dimen/login_register"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/sel_nav_leftbtn_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/personal_timecapsule_padding" >

        <ImageView
            android:id="@+id/nav_right_btn1_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:includeFontPadding="false"
            android:src="@drawable/publish_white" />
    </LinearLayout>

</RelativeLayout>