<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/system_back"
    android:orientation="vertical" >

    <include
        layout="@layout/top_navigation3"
        android:focusable="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/system_back"
        android:fadingEdge="none"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/system_back"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/setting_clear_cache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/sel_setting_bg" >

                <TextView
                    android:id="@+id/clear_cache_text"
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="@dimen/new_msg"
                    android:layout_marginTop="@dimen/new_msg"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/motify_data_space"
                    android:text="清空缓存"
                    android:textColor="@color/btn_gray_pressed"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/cache_size"
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/new_msg"
                    android:layout_marginRight="@dimen/motify_data_space"
                    android:layout_marginTop="@dimen/new_msg"
                    android:gravity="center_vertical"
                    android:text="0M"
                    android:textColor="@color/btn_gray_pressed"
                    android:textSize="12sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dip"
                    android:layout_below="@+id/clear_cache_text"
                    android:background="@color/system_gray" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/setting_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sel_setting_bg"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dip"
                    android:layout_marginBottom="@dimen/new_msg"
                    android:layout_marginTop="@dimen/new_msg"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/motify_data_space"
                    android:text="意见反馈"
                    android:textColor="@color/btn_gray_pressed"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dip"
                    android:background="@color/system_gray" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/setting_check_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sel_setting_bg" >

                <TextView
                    android:id="@+id/update_text"
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="@dimen/new_msg"
                    android:layout_marginTop="@dimen/new_msg"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/motify_data_space"
                    android:text="检查更新"
                    android:textColor="@color/btn_gray_pressed"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/version"
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/new_msg"
                    android:layout_marginRight="@dimen/motify_data_space"
                    android:layout_marginTop="@dimen/new_msg"
                    android:gravity="center_vertical"
                    android:text="v-1.1.2"
                    android:textColor="@color/btn_gray_pressed"
                    android:textSize="12sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dip"
                    android:layout_below="@+id/update_text"
                    android:background="@color/system_gray" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/user_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sel_setting_bg"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dip"
                    android:layout_marginBottom="@dimen/new_msg"
                    android:layout_marginTop="@dimen/new_msg"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/motify_data_space"
                    android:text="用户协议"
                    android:textColor="@color/btn_gray_pressed"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dip"
                    android:background="@color/system_gray" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/about_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/sel_setting_bg"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dip"
                    android:layout_marginBottom="@dimen/setting_list_margin"
                    android:layout_marginTop="@dimen/setting_list_margin"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/motify_data_space"
                    android:text="关于我们"
                    android:textColor="@color/btn_gray_pressed"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dip"
                    android:background="@color/system_gray" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>