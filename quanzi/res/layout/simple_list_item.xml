<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/personal_timecapsule_padding"
    android:background="@drawable/sel_color_white_gray" >

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/personal_timecapsule_padding"
        android:ellipsize="end"
        android:maxLength="4"
        android:text="张帅"
        android:textSize="@dimen/day_recommend_user_font" />

    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/day_recommend_help_padding"
        android:text="123"
        android:textColor="@color/gray_normal" />

</RelativeLayout>