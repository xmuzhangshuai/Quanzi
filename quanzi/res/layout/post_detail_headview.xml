<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/system_main_bg"
    android:paddingLeft="@dimen/share_space"
    android:paddingRight="@dimen/share_space"
    android:paddingTop="@dimen/share_space" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_top_radius"
        android:orientation="vertical"
        android:paddingTop="@dimen/margin_chat_activity" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/setting_list_margin"
            android:layout_marginLeft="@dimen/personal_timecapsule_padding"
            android:layout_marginRight="@dimen/personal_timecapsule_padding"
            android:layout_marginTop="@dimen/new_msg" >

            <ImageView
                android:id="@+id/head_image"
                android:layout_width="@dimen/headimage_size"
                android:layout_height="@dimen/headimage_size"
                android:src="@drawable/photoconor" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/headimage_size"
                android:layout_toRightOf="@+id/head_image"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/day_recommend_dot_space"
                    android:ellipsize="end"
                    android:maxLength="8"
                    android:textColor="@color/black"
                    android:textSize="@dimen/day_recommend_user_font" />

                <ImageView
                    android:id="@+id/gender"
                    android:layout_width="@dimen/activity_horizontal_margin"
                    android:layout_height="@dimen/activity_horizontal_margin"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/day_recommend_dot_space"
                    android:layout_toRightOf="@+id/name"
                    android:src="@drawable/male" />

                <CheckBox
                    android:id="@+id/concern_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/day_recommend_help_padding"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/day_recommend_help_padding"
                    android:layout_toLeftOf="@+id/time"
                    android:background="@drawable/sel_concern_gray_green"
                    android:button="@null"
                    android:textColor="@color/white"
                    android:textSize="@dimen/register_font_size"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/unenable"
                    android:textSize="@dimen/register_font_size" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/personal_timecapsule_padding"
            android:layout_marginRight="@dimen/personal_timecapsule_padding"
            android:layout_marginTop="@dimen/margin_chat_activity"
            android:textSize="@dimen/day_recommend_user_font" />

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/personal_timecapsule_padding"
            android:layout_marginRight="@dimen/personal_timecapsule_padding"
            android:layout_marginTop="@dimen/setting_list_margin"
            android:gravity="center"
            android:maxHeight="@dimen/tape_margin_top"
            android:maxWidth="@dimen/tape_margin"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/item_image_group1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/setting_list_margin"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/personal_timecapsule_padding"
            android:paddingRight="@dimen/personal_timecapsule_padding"
            android:paddingTop="2dp"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/item_image1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/personal_photo_size"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/item_image2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/personal_photo_size"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/item_image3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/personal_photo_size"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_image_group2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/personal_timecapsule_padding"
            android:paddingRight="@dimen/personal_timecapsule_padding"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/item_image4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/personal_photo_size"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/item_image5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/personal_photo_size"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/item_image6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/personal_photo_size"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/day_recommend_dot_space"
            android:background="@color/unenable_font" />
    </LinearLayout>

</LinearLayout>