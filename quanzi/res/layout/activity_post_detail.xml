<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/system_main_bg"
    android:gravity="bottom"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:gravity="center_vertical"
        android:padding="0.0px" >

        <ImageView
            android:id="@+id/rlCommenTitleBG"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/navigation_bg" />

        <LinearLayout
            android:id="@+id/left_btn_bg"
            android:layout_width="@dimen/login_register"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/sel_nav_leftbtn_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/day_recommend_help_font_space" >

            <ImageView
                android:id="@+id/nav_left_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:includeFontPadding="false"
                android:src="@drawable/ic_action_previous_item" />
        </LinearLayout>

        <TextView
            android:id="@+id/nav_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/left_btn_bg"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="详情"
            android:textColor="@color/white"
            android:textSize="@dimen/day_recommend_user_font" />
    </RelativeLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/comment_list"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:cacheColorHint="@color/white"
        android:descendantFocusability="blocksDescendants"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:drawSelectorOnTop="false"
        android:listSelector="#00000000"
        android:scrollbars="none" />

    <LinearLayout
        android:id="@+id/inputBar"
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:background="@drawable/shape_bottombar_gb"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:visibility="gone" >

        <EditText
            android:id="@+id/msg_et"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/sel_comment_input"
            android:hint="写下我的评论"
            android:inputType="textMultiLine"
            android:maxHeight="200.0dip"
            android:minHeight="@dimen/sent_btn_height"
            android:paddingLeft="@dimen/day_recommend_dot_space"
            android:paddingRight="@dimen/day_recommend_dot_space"
            android:textSize="@dimen/day_recommend_font_info" />

        <LinearLayout
            android:id="@+id/send_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:clickable="true"
            android:gravity="center_vertical" >

            <Button
                android:id="@+id/send_btn"
                android:layout_width="@dimen/size_avatar"
                android:layout_height="@dimen/sent_btn_height"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="@dimen/day_recommend_viewpager_padding_top"
                android:layout_marginTop="3dp"
                android:background="@drawable/chat_press_speak_btn"
                android:enabled="false"
                android:text="评论"
                android:textColor="@drawable/sel_chat_pressed_to_talk"
                android:textSize="@dimen/day_recommend_font_info" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/actionbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bottombar_gb"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="@dimen/personal_timecapsule_padding"
            android:layout_marginRight="@dimen/personal_timecapsule_padding"
            android:paddingRight="@dimen/activity_horizontal_margin" >

            <TextView
                android:id="@+id/favor_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/sel_color_gray_green"
                android:textSize="@dimen/register_font_size" />

            <ImageView
                android:id="@+id/more"
                android:layout_width="@dimen/time_capsule20"
                android:layout_height="@dimen/time_capsule20"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/login_register"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/comment_btn"
                android:clickable="true"
                android:focusable="false"
                android:src="@drawable/sel_more_btn" />

            <ImageView
                android:id="@+id/comment_btn"
                android:layout_width="@dimen/motify_data_space"
                android:layout_height="@dimen/motify_data_space"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/login_register"
                android:layout_toLeftOf="@+id/favor_btn"
                android:src="@drawable/sel_comment_btn" />

            <CheckBox
                android:id="@+id/favor_btn"
                android:layout_width="@dimen/motify_data_space"
                android:layout_height="@dimen/motify_data_space"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/sel_flipper_checkbox"
                android:button="@null" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>