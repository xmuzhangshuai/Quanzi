<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/system_back"
    android:orientation="vertical" >

    <include
        layout="@layout/top_navigation3"
        android:focusable="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/system_back"
        android:fadingEdge="none"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/system_back"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/setting_newmsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/sel_setting_bg"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dip"
                    android:layout_marginBottom="@dimen/new_msg"
                    android:layout_marginTop="@dimen/new_msg"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/motify_data_space"
                    android:text="新消息提醒"
                    android:textColor="@color/btn_gray_pressed"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dip"
                    android:background="@color/system_gray" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/setting_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sel_setting_bg"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dip"
                    android:layout_marginBottom="@dimen/new_msg"
                    android:layout_marginTop="@dimen/new_msg"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/motify_data_space"
                    android:text="聊天设置"
                    android:textColor="@color/btn_gray_pressed"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dip"
                    android:background="@color/system_gray" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/setting_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sel_setting_bg"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dip"
                    android:layout_marginBottom="@dimen/new_msg"
                    android:layout_marginTop="@dimen/new_msg"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/motify_data_space"
                    android:text="修改密码"
                    android:textColor="@color/btn_gray_pressed"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dip"
                    android:background="@color/system_gray" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/setting_blacklist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sel_setting_bg"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dip"
                    android:layout_marginBottom="@dimen/new_msg"
                    android:layout_marginTop="@dimen/new_msg"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/motify_data_space"
                    android:text="黑名单"
                    android:textColor="@color/btn_gray_pressed"
                    android:textSize="14sp" /><View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dip"
                    android:background="@color/system_gray" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/setting_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sel_setting_bg"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dip"
                    android:layout_marginBottom="@dimen/new_msg"
                    android:layout_marginTop="@dimen/new_msg"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/motify_data_space"
                    android:text="关于"
                    android:textColor="@color/btn_gray_pressed"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dip"
                    android:background="@color/system_gray" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/setting_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/sel_setting_bg"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dip"
                    android:layout_marginBottom="@dimen/setting_list_margin"
                    android:layout_marginTop="@dimen/setting_list_margin"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/motify_data_space"
                    android:text="退出登录"
                    android:textColor="@color/btn_gray_pressed"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dip"
                    android:background="@color/system_gray" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>